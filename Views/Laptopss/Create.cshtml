@model Laptop;
@using sell_laptops.LMS.Data;

@{
    ViewData["Title"] = "Add new Laptop item";

}

<div class="row text">
    <div class="col-md-8 offset-2" style="z-index:1">
        <p>
            <h1>Add a New Laptop item</h1>
        </p>
        <br />
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="alert alert-warning col-md-12"><i class="bi bi-exclamation-triangle-fill"></i> Write image name (as Integer), save it at ~/Images/UX_UI_Design/ file with png extension</div>
                        <label asp-for="ImageCode" class="control-label"></label><br />
                        <input asp-for="ImageCode" class="form-control" />
                        <span asp-validation-for="ImageCode" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label><br />
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label><br />
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LaptopCategory" class="control-label"></label><br />
                        <select asp-for="LaptopCategory" class="form-control" asp-items="Html.GetEnumSelectList<LaptopCategory>()"></select>
                        <span asp-validation-for="LaptopCategory" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label><br />
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="ADD Item" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-info" asp-action="Index"><i class="bi bi-arrow-left-square-fill"> Back, All Items</i></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
